<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.SignupController">
    <children>
        <Label text="Sign Up" />
        <TextField fx:id="firstname"/>
        <TextField fx:id="lastname"/>
        <TextField fx:id="username"/>
        <TextField fx:id="password"/>
        <Button fx:id="signupBtn" text="Sign Up" onAction="#clickSignUp"/>
        <Button fx:id="backBtn" text="Back" onAction="#clickBack"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <stylesheets>
   <URL value="@styles.css"/>
   </stylesheets>
</VBox>